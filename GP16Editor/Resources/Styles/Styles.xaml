    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="Shell.ForegroundColor" Value="{DynamicResource TextColor}" />
        <Setter Property="Shell.TitleColor" Value="{DynamicResource TextColor}" />
        <Setter Property="Shell.DisabledColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="Shell.UnselectedColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{DynamicResource TextColor}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="BarTextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="IconColor" Value="{DynamicResource TextColor}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="BarTextColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="UnselectedTabColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="SelectedTabColor" Value="{DynamicResource TextColor}" />
    </Style>

</ResourceDictionary>
