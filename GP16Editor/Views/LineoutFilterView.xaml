<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.LineoutFilterView"
             x:DataType="vm:LineoutFilterViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Lineout Filter" FontAttributes="Bold" />

        <Label Text="Presence" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Presence}" />

        <Label Text="Treble" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Treble}" />

        <Label Text="Middle" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Middle}" />

        <Label Text="Bass" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Bass}" />

        </VerticalStackLayout>
    </Border>
</ContentView>