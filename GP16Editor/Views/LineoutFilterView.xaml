<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.LineoutFilterView"
             x:DataType="vm:LineoutFilterViewModel">
    <HorizontalStackLayout>
        <controls:CircularSlider LabelText="Presence" Minimum="0" Maximum="100" Value="{Binding Presence}" />
        <controls:CircularSlider LabelText="Treble" Minimum="0" Maximum="100" Value="{Binding Treble}" />
        <controls:CircularSlider LabelText="Middle" Minimum="0" Maximum="100" Value="{Binding Middle}" />
        <controls:CircularSlider LabelText="Bass" Minimum="0" Maximum="100" Value="{Binding Bass}" />
    </HorizontalStackLayout>
</ContentView>

