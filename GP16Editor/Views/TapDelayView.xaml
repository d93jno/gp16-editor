<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.TapDelayView"
             x:DataType="vm:TapDelayViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Tap Delay" FontAttributes="Bold" />

        <!-- Center Tap -->
        <Label Text="Center Tap" FontAttributes="Italic" />
        <Label Text="Time (ms)" />
        <controls:CircularSlider Minimum="0" Maximum="1200" Value="{Binding CenterTapTime}" />
        <Label Text="Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding CenterTapLevel}" />

        <!-- Left Tap -->
        <Label Text="Left Tap" FontAttributes="Italic" />
        <Label Text="Time (ms)" />
        <controls:CircularSlider Minimum="0" Maximum="1200" Value="{Binding LeftTapTime}" />
        <Label Text="Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding LeftTapLevel}" />

        <!-- Right Tap -->
        <Label Text="Right Tap" FontAttributes="Italic" />
        <Label Text="Time (ms)" />
        <controls:CircularSlider Minimum="0" Maximum="1200" Value="{Binding RightTapTime}" />
        <Label Text="Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding RightTapLevel}" />

        <!-- Feedback -->
        <Label Text="Feedback" FontAttributes="Italic" />
        <Label Text="Feedback" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Feedback}" />

        <!-- Cutoff -->
        <Label Text="Cutoff" FontAttributes="Italic" />
        <Picker Title="Cutoff" SelectedItem="{Binding Cutoff}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Thru</x:String>
                    <x:String>500 Hz</x:String>
                    <x:String>1 kHz</x:String>
                    <x:String>2 kHz</x:String>
                    <x:String>4 kHz</x:String>
                    <x:String>8 kHz</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
    </Border>
</ContentView>