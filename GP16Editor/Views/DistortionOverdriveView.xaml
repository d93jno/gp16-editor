<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.DistortionOverdriveView"
             xmlns:viewModels="clr-namespace:GP16Editor.ViewModels"
             x:DataType="viewModels:DistortionOverdriveViewModel">
    <HorizontalStackLayout>
        <controls:CircularSlider LabelText="Drive" Minimum="0" Maximum="100" Value="{Binding Drive}" />

        <VerticalStackLayout>
            <Label Text="Turbo" />
            <Switch IsToggled="{Binding Turbo}" />
        </VerticalStackLayout>

        <controls:CircularSlider LabelText="Tone" Minimum="-50" Maximum="50" Value="{Binding Tone}" />

        <controls:CircularSlider LabelText="Level" Minimum="0" Maximum="100" Value="{Binding Level}" />
    </HorizontalStackLayout>
</ContentView>