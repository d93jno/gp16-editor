<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.DistortionOverdriveView"
             xmlns:viewModels="clr-namespace:GP16Editor.ViewModels"
             x:DataType="viewModels:DistortionOverdriveViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Distortion / Overdrive" FontAttributes="Bold" />

        <Label Text="Drive" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Drive}" />

        <HorizontalStackLayout>
            <Label Text="Turbo" />
            <Switch IsToggled="{Binding Turbo}" />
        </HorizontalStackLayout>

        <Label Text="Tone" />
        <controls:CircularSlider Minimum="-50" Maximum="50" Value="{Binding Tone}" />

        <Label Text="Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Level}" />
        </VerticalStackLayout>
    </Border>
</ContentView>