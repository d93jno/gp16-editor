<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.NoiseSuppressorView"
             x:DataType="vm:NoiseSuppressorViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Noise Suppressor" FontAttributes="Bold" />

        <Label Text="Sensitivity" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Sensitivity}" />

        <Label Text="Release" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Release}" />

        <Label Text="Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Level}" />
        </VerticalStackLayout>
    </Border>
</ContentView>