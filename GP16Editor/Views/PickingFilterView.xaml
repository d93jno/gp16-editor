<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             x:Class="GP16Editor.Views.PickingFilterView"
             x:DataType="vm:PickingFilterViewModel">
    <VerticalStackLayout>
        <Label Text="Picking Filter" FontAttributes="Bold" />

        <Label Text="{Binding Sensitivity, StringFormat='Sensitivity: {0:F0}'}" />
        <Slider x:Name="SensitivitySlider" Minimum="0" Maximum="100" Value="{Binding Sensitivity}" />

        <Label Text="{Binding CutoffFrequency, StringFormat='Cutoff Frequency: {0:F0}'}" />
        <Slider x:Name="CutoffFrequencySlider" Minimum="0" Maximum="100" Value="{Binding CutoffFrequency}" />

        <Label Text="{Binding QControl, StringFormat='Q Control: {0:F1}'}" />
        <Slider x:Name="QControlSlider" Minimum="1.0" Maximum="5.0" Value="{Binding QControl}" />

        <Picker Title="Up/Down" SelectedItem="{Binding UpDown}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Up</x:String>
                    <x:String>Down</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
</ContentView>