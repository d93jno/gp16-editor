<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.PickingFilterView"
             x:DataType="vm:PickingFilterViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Picking Filter" FontAttributes="Bold" />

        <Label Text="Sensitivity" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Sensitivity}" />

        <Label Text="Cutoff Frequency" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding CutoffFrequency}" />

        <Label Text="Q Control" />
        <controls:CircularSlider Minimum="1.0" Maximum="5.0" Value="{Binding QControl}" />

        <Picker Title="Up/Down" SelectedItem="{Binding UpDown}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Up</x:String>
                    <x:String>Down</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
    </Border>
</ContentView>