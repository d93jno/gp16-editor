<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:DataType="vm:CompressorViewModel"
             x:Class="GP16Editor.Views.CompressorView">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Compressor" FontAttributes="Bold" />
        
        <Label Text="Sustain" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Sustain}" />

        <Label Text="Attack" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Attack}" />

        <Label Text="Tone" />
        <controls:CircularSlider Minimum="-50" Maximum="50" Value="{Binding Tone}" />

        <Label Text="Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Level}" />
    </VerticalStackLayout>
    </Border>
</ContentView>