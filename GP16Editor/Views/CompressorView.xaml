<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             x:DataType="vm:CompressorViewModel"
             x:Class="GP16Editor.Views.CompressorView">
    <VerticalStackLayout>
        <Label Text="Compressor" FontAttributes="Bold" />
        
        <Label Text="{Binding Sustain, StringFormat='Sustain: {0:F0}'}" />
        <Slider x:Name="SustainSlider" Minimum="0" Maximum="100" Value="{Binding Sustain}" />

        <Label Text="{Binding Attack, StringFormat='Attack: {0:F0}'}" />
        <Slider x:Name="AttackSlider" Minimum="0" Maximum="100" Value="{Binding Attack}" />

        <Label Text="{Binding Tone, StringFormat='Tone: {0:F0}'}" />
        <Slider x:Name="ToneSlider" Minimum="-50" Maximum="50" Value="{Binding Tone}" />

        <Label Text="{Binding Level, StringFormat='Level: {0:F0}'}" />
        <Slider x:Name="LevelSlider" Minimum="0" Maximum="100" Value="{Binding Level}" />
    </VerticalStackLayout>
</ContentView>