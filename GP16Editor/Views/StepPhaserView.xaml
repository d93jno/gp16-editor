<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.StepPhaserView"
             xmlns:viewModels="clr-namespace:GP16Editor.ViewModels"
             x:DataType="viewModels:StepPhaserViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Step Phaser" FontAttributes="Bold" />

        <Label Text="Rate" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Rate}" />

        <Label Text="Depth" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Depth}" />

        <Label Text="Manual" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Manual}" />

        <Label Text="Resonance" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Resonance}" />

        <Label Text="LFO Step" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding LfoStep}" />
    </VerticalStackLayout>
    </Border>
</ContentView>