<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.ChorusView"
             x:DataType="vm:ChorusViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Chorus" FontAttributes="Bold" />

        <Label Text="Pre Delay (ms)" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding PreDelay}" />

        <Label Text="Rate" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Rate}" />

        <Label Text="Depth" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding Depth}" />

        <Label Text="Effect Level" />
        <controls:CircularSlider Minimum="0" Maximum="100" Value="{Binding EffectLevel}" />

        </VerticalStackLayout>
    </Border>
</ContentView>