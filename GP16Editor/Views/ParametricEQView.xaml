<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GP16Editor.ViewModels"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.ParametricEQView"
             x:DataType="vm:ParametricEQViewModel">
    <Border Stroke="LightGray" StrokeThickness="1" Padding="5">
        <VerticalStackLayout>
        <Label Text="Parametric EQ" FontAttributes="Bold" />

        <!-- Low Band -->
        <Label Text="Low Band" FontAttributes="Italic" />
        <Label Text="Frequency (Hz)" />
        <controls:CircularSlider Minimum="60" Maximum="250" Value="{Binding LowFreq}" />
        <Label Text="Level (dB)" />
        <controls:CircularSlider Minimum="-12" Maximum="12" Value="{Binding LowLevel}" />

        <!-- Low Mid Band -->
        <Label Text="Low Mid Band" FontAttributes="Italic" />
        <Label Text="Frequency (Hz)" />
        <controls:CircularSlider Minimum="125" Maximum="1000" Value="{Binding LowMidFreq}" />
        <Label Text="Q" />
        <controls:CircularSlider Minimum="1.0" Maximum="5.0" Value="{Binding LowMidQ}" />
        <Label Text="Level (dB)" />
        <controls:CircularSlider Minimum="-12" Maximum="12" Value="{Binding LowMidLevel}" />

        <!-- High Mid Band -->
        <Label Text="High Mid Band" FontAttributes="Italic" />
        <Label Text="Frequency (Hz)" />
        <controls:CircularSlider Minimum="500" Maximum="4000" Value="{Binding HighMidFreq}" />
        <Label Text="Q" />
        <controls:CircularSlider Minimum="1.0" Maximum="5.0" Value="{Binding HighMidQ}" />
        <Label Text="Level (dB)" />
        <controls:CircularSlider Minimum="-12" Maximum="12" Value="{Binding HighMidLevel}" />

        <!-- High Band -->
        <Label Text="High Band" FontAttributes="Italic" />
        <Label Text="Frequency (Hz)" />
        <controls:CircularSlider Minimum="2000" Maximum="8000" Value="{Binding HighFreq}" />
        <Label Text="Level (dB)" />
        <controls:CircularSlider Minimum="-12" Maximum="12" Value="{Binding HighLevel}" />
        
    </VerticalStackLayout>
    </Border>
</ContentView>