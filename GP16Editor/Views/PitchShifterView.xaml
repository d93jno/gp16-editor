<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:GP16Editor.Controls"
             x:Class="GP16Editor.Views.PitchShifterView"
             xmlns:viewModels="clr-namespace:GP16Editor.ViewModels"
             x:DataType="viewModels:PitchShifterViewModel">
    <HorizontalStackLayout>
        <controls:CircularSlider LabelText="Chromatic (semitones)" Minimum="-12" Maximum="12" Value="{Binding Chromatic}" />
        <controls:CircularSlider LabelText="Fine" Minimum="-50" Maximum="50" Value="{Binding Fine}" />
        <controls:CircularSlider LabelText="Balance" Minimum="0" Maximum="100" Value="{Binding Balance}" />
        <controls:CircularSlider LabelText="Feedback" Minimum="0" Maximum="100" Value="{Binding Feedback}" />
        <controls:CircularSlider LabelText="Pre Delay (ms)" Minimum="0" Maximum="100" Value="{Binding PreDelay}" />
    </HorizontalStackLayout>
</ContentView>

